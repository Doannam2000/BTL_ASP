@model MyPham.Models.TaiKhoan
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-lg-6">
                <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                    <div class="brand-logo">
                        <img src="https://lamdepz.com/wp-content/uploads/2021/03/logo-full-1.png" alt="logo">
                    </div>
                    <h4>Đăng ký tài khoản</h4>
                    <h6 class="font-weight-light">Đăng ký rất dễ dàng. Nó chỉ mất một vài bước</h6>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        Email
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        Mật Khẩu
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        Chức Năng
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ChucNang, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ChucNang, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Đăng Ký" class="btn-block btn-primary btn-lg font-weight-medium auth-form-btn" />
                        </div>
                    </div>
                    <div class="text-center mt-4 font-weight-light">
                    </div>
                    Đã có tài khoản? <a href="@Url.Action("Login","Home")" class="text-primary">Đăng nhập</a>
                </div>
            </div>
        </div>
    </div>

}


