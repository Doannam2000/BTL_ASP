
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="https://lamdepz.com/wp-content/uploads/2021/03/logo-full-1.png" alt="logo">
                            </div>
                            <h4>Đăng ký tài khoản</h4>
                            <h6 class="font-weight-light">Đăng ký rất dễ dàng. Nó chỉ mất một vài bước</h6>
                            <form class="pt-3">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" id="exampleInputUsername" placeholder="Họ và tên">
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-lg" id="exampleInputEmail" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" id="exampleInputAddress" placeholder="Địa chỉ">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" id="exampleInputPhone" placeholder="Số điện thoại">
                                </div>

                                <div class="mt-3">
                                    <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" href="index.html">ĐĂNG KÝ</a>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                </div>
                                Đã có tài khoản? <a href="@Url.Action("Login","Home")" class="text-primary">Đăng nhập</a>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        </div>

