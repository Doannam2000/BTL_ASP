@model IEnumerable<MyPham.Models.TaiKhoan>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin">
            <div class="d-flex justify-content-between flex-wrap">
                <div class="d-flex align-items-end flex-wrap">
                    <div class="mr-md-3 mr-xl-5">
                        <h2>Xin chào, Admin</h2>
                        <div class="d-flex">
                            <i class="mdi mdi-home text-muted hover-cursor"></i>
                            <p class="text-muted mb-0 hover-cursor">&nbsp;/&nbsp;Quản lý tài khoản&nbsp;&nbsp;</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Danh sách tài khoản</h4>
                <a class="nav-link " href="@Url.Action("Create","TaiKhoans")">
                    <span class="menu-title btn btn-primary">Thêm tài khoản</span>
                </a>
                <div class="table-responsive pt-3">
                    <table id="recent-purchases-listing" class="table text-center">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.MaTK)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Anh)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.HoTen)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PhanQuyen.TenQuyen)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DiaChi)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SoDienThoai)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TinhTrang)
                                </th>
                                <th>
                                    Hành động
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaTK)
                                    </td>
                                    <td>
                                        @{
                                            string ImagePath = "~/wwwroot/images/user/" + item.Anh;
                                        }
                                        <img src="@Url.Content(ImagePath)" width=" 100" height="auto" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HoTen)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhanQuyen.TenQuyen)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DiaChi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoDienThoai)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TinhTrang)
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center">
                                            <a class="nav-link" href="@Url.Action("Edit", "TaiKhoans", new { id = item.MaTK })">
                                                <span class="menu-title btn btn-wd btn-info pl-3 pr-3 pt-2 pb-2">Cập nhật</span>
                                            </a>
                                            <a class="nav-link" href="@Url.Action("DeleteConfirmedCustom", "TaiKhoans", new { id = item.MaTK })">
                                                <button id="btnDelete" onclick="return confirm('Bạn chắc chắn muốn xóa tài khoản này: @item.HoTen')" class="menu-title btn btn-wd btn-danger pl-3 pr-3 pt-2 pb-2">Xóa tài khoản</button>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@*confirm('Bạn chắc chắn muốn xóa tài khoản này: @item.HoTen')*@

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
<script type="text/javascript">
    function functionConfirm(event) {
        swal({
            title: 'Thông báo',
            text: "Bạn chắc chắn muốn xóa tài khoản này",
            type: 'warning',
            showCancelButton: true,
            cancelButtonText: 'Hủy',
            cancelButtonClass: 'btn btn-danger',
            showConfirmButton: true,
            confirmButtonText: 'Đồng ý',
            confirmButtonClass: 'btn btn-success'
        }, function (isConfirm) {
                if (isConfirm) {
                return true;
            } else {
                return false;
            }
        });
        return false;
    }
</script>